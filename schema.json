                ],
                "minLenght": 1
            },
            "transform_rotate": {
                "type": "number"
            },
            "text_prevent_widow": {
                "type": "boolean"
            },
            "line_spacing_multiplier": {
                "type": [
                    "string",
                    "number"
                ]
            },
            "title": {
                "type": "string",
                "minLenght": 1
            },
            "single_line": {
                "type": "boolean"
            },
            "layout_margin": {
                "type": [
                    "string",
                    "number"
                ],
                "minLenght": 1
            },
            "corner_radius": {
                "type": [
                    "string",
                    "number"
                ],
                "minLenght": 1
            },
            "layout_flex_align_content": {
                "type": "string",
                "minLenght": 1
            },
            "layout_flex_direction": {
                "type": "string",
                "minLenght": 1
            },
            "padding_top": {
                "type": [
                    "string",
                    "number"
                ],
                "minLenght": 1
            },
            "font_stretch": {
                "type": "string",
                "minLenght": 1
            },
            "text_style": {
                "type": "string"

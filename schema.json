[
    {
        "id": "/incito",
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "minLength": 1,
                "description": "ID of incito"
            },
            "version": {
                "type": "string",
                "minLength": 1,
                "description": "Incito version"
            },
            "locale": {
                "type": "string",
                "minLength": 1,
                "description": "Locale"
            },
            "meta": {
                "type": "object",
                "minProperties": 1,
                "description": "Container for meta data"
            },
            "font_assets": {
                "$ref": "/fontAssets"
            },
            "theme": {
                "$ref": "/theme"
            },
            "root_view": {
                "type": "object",
                "anyOf": {
                    "$ref": "/view"
                }
            }
        },
        "required": [
            "id",
            "root_view"
        ]
    },
    {
        "id": "/fontAssets",
        "type": "object",
        "minProperties": 1,
        "additionalProperties": false,
        "patternProperties": {
            "[a-z|-]+": {
                "type": "object",
                "description": "External font asset",
                "properties": {
                    "src": {
                        "type": "array",
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            },
                            "minItems": 2,
                            "maxItems": 2
                        },
                        "required": true
                    },
                    "weight": {
                        "type": "string",
                        "minLength": 1
                    },
                    "style": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            }
        }
    },
    {
        "id": "/theme",
        "type": "object",
        "properties": {
            "font_family": {
                "type": "array",
                "items": {
                    "type": "string",
                    "minLength": 1
                },
                "minItems": 1
            },
            "background_color": {
                "type": "string",
                "format": "cssColor",
                "minLength": 1
            },
            "text_color": {
                "type": "string",
                "format": "cssColor",
                "minLength": 1
            },
            "line_spacing_multiplier": {
                "type": "number"
            }
        }
    },
    {
        "id": "/view",
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "minLenght": 1
            },
            "view_name": {
                "type": "string",
                "enum": [
                    "View",
                    "FragView",
                    "ImageView",
                    "TextView",
                    "VideoEmbedView",
                    "Video",
                    "LinearLayout",
                    "AbsoluteLayout",
                    "FlexLayout"
                ],
                "minLenght": 1
            },
            "child_views": {
                "type": "array",
                "items": {
                    "$ref": "/view"
                },
                "minItems": 1
            },
            "role": {
                "type": "string",
                "minLenght": 1
            },
            "meta": {
                "type": "object",
                "minProperties": 1,
                "description": "Container for meta data"
            },
            "background_color": {
                "type": "string",
                "format": "cssColor",
                "minLength": 1
            },
            "background_tile_mode": {
                "type": "string",
                "enum": [
                    "repeat_x",
                    "repeat_y",
                    "repeat"
                ],
                "minLenght": 1
            },
            "background_image_position": {
                "type": "string",
                "minLenght": 1
            },
            "background_image_scale_type": {
                "type": "string",
                "minLenght": 1
            },
            "gravity": {
                "type": "string",
                "minLenght": 1
            },
            "layout_width": {
                "type": [
                    "number",
                    "string"
                ],
                "minimum": 0
            },
            "padding": {
                "type": "number"
            },
            "layout_flex_align_items": {
                "type": "string",
                "minLenght": 1
            },
            "layout_flex_justify_content": {
                "type": "string",
                "minLenght": 1
            },
            "layout_flex_shrink": {
                "type": "number"
            },
            "layout_flex_grow": {
                "type": "number"
            },
            "text": {
                "type": "string",
                "minLenght": 1
            },
            "text_color": {
                "type": "string",
                "format": "cssColor",
                "minLenght": 1
            },
            "text_alignment": {
                "type": "string",
                "minLenght": 1
            },
            "text_size": {
                "type": "number",
                "minimum": 0
            },
            "layout_height": {
                "type": [
                    "string",
                    "number"
                ],
                "minLenght": 1
            },
            "layout_left": {
                "type": [
                    "string",
                    "number"
                ],
                "minLenght": 1
            },
            "layout_top": {
                "type": [
                    "string",
                    "number"
                ],
                "minLenght": 1
            },
            "accessibility_label": {
                "type": "string",
                "minLenght": 1
            },
            "layout_bottom": {
                "type": [
                    "string",
                    "number"
                ],
                "minLenght": 1
            },
            "clip_children": {
                "type": "boolean"
            },
            "src": {
                "type": "string",
